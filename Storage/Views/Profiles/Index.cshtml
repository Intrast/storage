@model PagedList.IPagedList<Storage.Models.Profile>
@using PagedList.Mvc;
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Register", "Account")
    </p>
}
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            GroupId
        </th>
        <th>
            Tehnology
        </th>
        <th>
            DateStartWork
        </th>
        <th>
            DateEndWork
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.UserId != User.Identity.GetUserId())
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.Group)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tehnology)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateStartWork)
                </td>
                <td>
                    @if (item.DateEndWork == null)
                    {
                        @:-
                    }
                    else
                    {@Html.DisplayFor(modelItem => item.DateEndWork)}
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |

                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                }
            </tr>
        }
    }

</table>

<br />
Сторінка @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))