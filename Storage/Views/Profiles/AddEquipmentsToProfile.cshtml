@model Storage.Models.Equipment
@{
                /**/

                ViewBag.Title = "AddEquipmentsToProfile";
}
<h2>AddEquipmentsToProfile</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                @Html.DropDownListFor(x => x.ProfileId, ViewBag.Profiles as SelectList)
                @Html.DropDownListFor(x => x.Id, ViewBag.Equipments as SelectList)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" value="Add" class="btn btn-sm" />
            </div>
        </div>



    </div>
    }
