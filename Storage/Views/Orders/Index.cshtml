@model PagedList.IPagedList<Storage.Models.Order>
@using PagedList.Mvc;
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Orders", "Index")
    @Html.ActionLink("Request", "Request")
</p>

<h2>Orders</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Status
        </th>
        <th>
            OrderName
        </th>
        <th>
            Price
        </th>
        <th>
            Url
        </th>
        <th>
            UserId
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if ((User.IsInRole("Admin")) || (User.Identity.GetUserId() == item.UserId))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Url)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                @if ((User.IsInRole("Admin")) || (User.Identity.GetUserId() == item.UserId))
                {
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                }
                else
                {
                    <td></td>
                }
            </tr>
        }
    }

</table>

<br />
Сторінка @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))